# Database
DATABASE_URL="postgresql://username:password@localhost:5432/gradian_scm?schema=public"

# Data Source Configuration
DATA_SOURCE="mock" # Options: "mock" | "database"

# Next.js
NEXTAUTH_SECRET="your-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# JWT Authentication Configuration
# JWT_SECRET is used for signing and verifying JWT tokens
# If not set, will fallback to NEXTAUTH_SECRET
JWT_SECRET="your-jwt-secret-key-change-in-production"
# Access token expiration time in seconds (default: 3600 = 1 hour)
JWT_ACCESS_TOKEN_EXPIRY=3600
# Refresh token expiration time in seconds (default: 604800 = 7 days)
JWT_REFRESH_TOKEN_EXPIRY=604800

# Password Security Configuration
# PEPPER is a secret value added to passwords before hashing with Argon2
# This provides an additional layer of security even if the database is compromised
# Generate a strong random string (e.g., using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# IMPORTANT: Generate your own unique PEPPER value and keep it secret!
# Example (replace with your own generated value):
PEPPER="0e9ee8f031a1db5b79b1580edd3dce78b8451144701df866a2dc9de861ffd94e"

# 2FA Service Credentials
CLIENT_ID="development-client-id"
SECRET_KEY="development-secret-key"

# Schema API Configuration
# Override the schema API base path (default: /api/schemas)
# Do not use quotes - Next.js will include them as part of the value
NEXT_PUBLIC_SCHEMA_API_BASE=/api/schemas

# Demo Mode Configuration
# When DEMO_MODE is true (default), the app uses local file-based storage
# When DEMO_MODE is false, the app proxies requests to external services
# Valid values: "true", "1", "yes", "on" (case-insensitive)
DEMO_MODE=true

# Client-side Demo Mode Configuration (must match DEMO_MODE)
# When NEXT_PUBLIC_DEMO_MODE is true, client-side schema store caches from local /api/schemas
# When NEXT_PUBLIC_DEMO_MODE is false, client-side schema store caches from URL_SCHEMA_CRUD/api/schemas
# Valid values: "true", "1", "yes", "on" (case-insensitive)
NEXT_PUBLIC_DEMO_MODE=true

# External API URLs (used when DEMO_MODE is false)
# URL_SCHEMA_CRUD: Base URL for schema CRUD operations (server-side)
# URL_DATA_CRUD: Base URL for data CRUD operations (server-side)
# NEXT_PUBLIC_URL_SCHEMA_CRUD: Base URL for schema CRUD operations (client-side, must match URL_SCHEMA_CRUD)
# NEXT_PUBLIC_URL_DATA_CRUD: Base URL for data CRUD operations (client-side, must match URL_DATA_CRUD)
# URL_SCHEMA_CRUD=https://api.example.com
# NEXT_PUBLIC_URL_SCHEMA_CRUD=https://api.example.com
# URL_DATA_CRUD=https://api.example.com
# NEXT_PUBLIC_URL_DATA_CRUD=https://api.example.com